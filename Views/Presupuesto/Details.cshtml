@using Proyecto.Models
@model Presupuestos

@{
    ViewData["Title"] = "Detalles del Presupuesto";
}

<h1>Detalles del Presupuesto</h1>

<div>
    <h4>Presupuesto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID
        </dt>
        <dd class = "col-sm-10">
            @Model.idPresupuesto
        </dd>
        <dt class = "col-sm-2">
            Destinatario
        </dt>
        <dd class = "col-sm-10">
            @Model.NombreDestinatario
        </dd>
        <dt class = "col-sm-2">
            Fecha de Creaci√≥n
        </dt>
        <dd class = "col-sm-10">
            @Model.FechaCreacion.ToShortDateString()
        </dd>
    </dl>
</div>

<hr />

<h4>Productos Incluidos</h4>

@if (Model.detalle != null && Model.detalle.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.detalle) {
            <tr>
                <td>
                    @item.producto.descripcion
                </td>
                <td>
                    @item.cantidad
                </td>
                <td>
                    @item.producto.precio
                </td>
                <td>
                    @(@item.producto.precio * @item.cantidad)
                </td>
            </tr>
    }
        </tbody>
    </table>
}
else
{
    <p>Este presupuesto no tiene productos asignados.</p>
}

<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model.idPresupuesto" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>